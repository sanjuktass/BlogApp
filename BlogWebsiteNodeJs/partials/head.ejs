<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Document | <%= title %>
</title>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Noto+Serif:wght@400;700&display=swap');

    body {
        margin: 20px;
        padding: 0;
        font-family: 'Noto Serif', serif;
        max-width: 1200px;
        background-color: #00DBDE;
        background-image: linear-gradient(90deg, #00DBDE 0%, #FC00FF 100%);

    }


    p,
    h1,
    h2,
    h3,
    a,
    ul {
        margin: 0;
        padding: 0;
        text-decoration: none;
        color: #222;
    }

    /* nav & footer styles */
    nav {
        display: flex;
        justify-content: space-between;
        margin-bottom: 80px;
        padding-bottom: 10px;
        border-bottom: 1px solid greenyellow;
        text-transform: uppercase;

    }

    nav ul {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;

    }


    nav li {
        list-style-type: none;
        margin-right: 20px;

    }

    nav h1 {
        font-size: 3em;
    }

    nav p,
    nav a {
        color: #fff;
        font-weight: 300;
        margin-bottom: 20px;

    }

    nav a:hover {
        color: #2BFF88;
    }

    footer {
        position: fixed;
        height: 30px;
        left: 0;
        bottom: 0;
        width: 100%;
        background: linear-gradient(90deg, #d53369 0%, #daae51 100%);
        color: white;
        text-align: center
    }

    h2 {
        margin-bottom: 40px;
    }

    h3 {
        text-transform: capitalize;
        margin-bottom: 8px;
    }

    .content {
        margin-left: 20px;
    }

    /* index styles */
    /* details styles */
    /* create styles */
    .create-blog {
        background: linear-gradient(90deg, #FC466B 0%, #3F5EFB 100%);
        height: 500px;
        width: 500px;
        margin: auto;
        box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
        border: 2px solid white;
        border-radius: 5px;
        border-width: 0;
    }

    .create-blog form {
        max-width: 400px;
        margin: 0 auto;

    }

    .create-blog input,
    .create-blog textarea {
        display: block;
        width: 100%;
        margin: 10px 0;
        padding: 8px;
    }

    .create-blog label {
        display: block;
        margin-top: 24px;
    }

    textarea {
        height: 120px;
    }

    .create-blog button {
        background-image: linear-gradient(to right, #DA22FF 0%, #9733EE 51%, #DA22FF 100%);
        margin: 20px;
        padding: 10px 35px;
        text-align: center;
        text-transform: uppercase;
        color: white;
        box-shadow: 0 0 20px #eee;
        border-radius: 10px;
        display: block;
        border-width: 0;
    }



    .blogs a {
        display: block;
        margin: 40px 0;
        padding-left: 30px;
        border-left: 6px solid crimson;
    }

    .blogs a:hover h3 {
        color: crimson;
    }

    /* details styles */
    .details {
        position: relative;
    }

    .detailsContent {
        background: linear-gradient(90deg, #efd5ff 0%, #515ada 100%);
        height: 170px;
        width: 290px;
        box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
        border: 2px solid white;
        border-radius: 5px;
        border-width: 0;
        display: flex;
        justify-content: flex-start;
        text-align: left;
        flex-direction: column;
        position: relative;
        left: 10px
    }

    .delete {
        position: absolute;
        right: 10px;
        bottom: 5px;
        border-radius: 5px;
        padding: 8px;
        background-image: linear-gradient(to right, #DA22FF 0%, #9733EE 51%, #DA22FF 100%);
        text-align: center;
        text-transform: uppercase;
        color: white;
      
        border-radius: 10px;
        display: block;
        border-width: 0;
    }

    .delete:hover {
        cursor: pointer;
        box-shadow: 1px 2px 3px rgba(0, 0, 0, 0.2);
        box-shadow: 0 0 20px #eee;
    }

    .all_blogs {
        background: linear-gradient(90deg, #9ebd13 0%, #008552 100%);
        height: 100px;
        width: 220px;
        box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
        border: 2px solid white;
        border-radius: 5px;
        border-width: 0;
        margin: 20px;
        padding: 30px;
    }

    .all_blogs:hover {
        background: linear-gradient(90deg, #FDBB2D 0%, #22C1C3 100%);
        height: 110px;
        width: 230px;
    }
</style>